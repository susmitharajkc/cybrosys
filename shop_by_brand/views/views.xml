<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shop_by_brand_list">
      <field name="name">shop_by_brand_list</field>
      <field name="model">shop.brand</field>
      <field name="arch" type="xml">
        <tree>
          <field name="brand_name"/>
          <field name="brand_description"/>

        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="shop_by_brand_form">
      <field name="name">shop_by_brand_form</field>
      <field name="model">shop.brand</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_left">
                        <group>
                            <field name="brand_name"/>
                            <field name="brand_description"/>
                             <field name="shop_by_brand" />
<!--                            <field name="product_ids"/>-->
                        </group>
                    </div>
                </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shop_by_brand_action_window">
      <field name="name">Shop By Brand</field>
      <field name="res_model">shop.brand</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face"> Create a new Brand </p>
      </field>
    </record>

    <menuitem name="Shop By Brand" id="shop_brand_menu_one"  />
<!--    sub menu item    -->
    <menuitem name="Brands" id="shop_brand_menu_2" parent="website_sale.menu_product_settings" action="shop_by_brand_action_window"/>

